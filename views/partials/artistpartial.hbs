<div class="artist-card">
  {{#if preview.0.url}}
    <img src="{{preview.0.url}}" alt="{{name}}" />
  {{else}}
    <img src="images/default-image.png" alt="{{name}}" />
  {{/if}}
  <div class="artist-card-banner">
    <p>{{name}}</p>
    <div class="albums-btn">
      <a href="/albums/{{id}}">
        view albums
      </a>
    </div>
  </div>
</div>
